<body>
    <main role="main" class="container">
        <h1 class="mt-3"><a href="/" class="headline text-center"><i class="fas fa-square-full"></i> Stolperstein</a></h1>
        <p class="lead">take a picture of any Stolperstein in berlin to learn more about the person's biography.</p>
        <hr/>

        <div class="bio" style="margin-top:5em;{{show_person}}">
            {{#if data}}
                <h4>{{data}}</h4>
            {{/if}}
            <h4>{{name}}</h4>
            <div class="row">
                <div class="col-3 fw-500">place</div>
                <div class="col-9">{{place}}</div>
                <div class="col-3 fw-500" style="{{sh_date}}">laying</div>
                <div class="col-9" style="{{sh_date}}">{{date}}</div>
                <div class="col-3 fw-500">born</div>
                <div class="col-9">{{born}}</div>
                <div class="col-3 fw-500" style="{{sh_deportation}}">deportation</div>
                <div class="col-9" style="{{sh_deportation}}">{{deportation}}</div>
                <div class="col-3 fw-500">murder</div>
                <div class="col-9">{{destiny}}</div>
            </div>
            {{#if fotos}}
                {{#each fotos}}
                    <img src="{{this.foto}}" class="image_person"/>
                {{/each}}
            {{/if}}
            <div class="row mt-3">
                <div class="col">{{description}}</div>
            </div>
            <a href="{{url}}" class="source" target="_blank" rel="noopener noreferrer"><i class="fas fa-link"></i>go to source</a>
            <br><br>
        </div>

        <form action="/" method="POST" enctype="multipart/form-data" style="{{show_camera}}">
            <p class="lead">
                <div id="open_camera"><i class="fas fa-camera"></i></div>
                <input type="file" name="stolperstein" accept="image/*;capture=camera" id="stolperstein_input" capture>
            </p>
            <p class="lead"><button type="submit" id="upload_btn">submit</button><br></p>
        </form>
    </main>
    <footer class="footer text-center">
        <a href="/{{random_number}}" id="bio_btn">show a biography <i class="fas fa-random"></i></a>
        <a href="/" id="back_btn" style="{{show_person}};padding-left: 2em">back</a>
    </footer>

    <script src="/js/index_frontend.js"></script>

</body>